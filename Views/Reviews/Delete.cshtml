@model MovieExpert_Proiect.Models.Review

@{
    ViewData["Title"] = "Șterge Recenzie";
}

<style>
   
    :root {
        --color-primary: #146c86; 
        --color-dark: #2b4955;
    }

    
    .delete-card {
        background: #fff;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        max-width: 500px;
        margin: 4rem auto; 
        padding: 40px;
        text-align: center;
    }

    .page-title {
        color: var(--color-dark);
        font-weight: 700;
        margin-bottom: 10px;
    }

    .confirm-text {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 30px;
    }

   
    .review-preview {
        background-color: #f8f9fa; 
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
        border: 1px solid #e9ecef;
        position: relative;
    }

    .movie-name {
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--color-dark);
        margin: 0;
        line-height: 1.2;
    }

    .user-info {
        font-size: 0.9rem;
        color: #6c757d;
        margin-top: 5px;
    }

    .review-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #adb5bd;
        letter-spacing: 1px;
        font-weight: 700;
        display: block;
        margin-bottom: 10px;
    }

    .review-snippet {
        font-style: italic;
        color: #888;
        margin-top: 15px;
        font-size: 0.85rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    
    .btn-delete-simple {
        background-color: #dc3545; 
        color: white;
        padding: 10px 35px;
        border-radius: 30px;
        font-weight: 600;
        border: none;
        transition: background 0.2s;
    }

        .btn-delete-simple:hover {
            background-color: #bb2d3b;
        }

    .btn-cancel-simple {
        background-color: transparent;
        color: #6c757d;
        padding: 10px 25px;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
        display: inline-block;
    }

        .btn-cancel-simple:hover {
            color: var(--color-dark);
            text-decoration: underline;
        }
</style>

<div class="container">

    <div class="delete-card">

        <h3 class="page-title">Șterge Recenzie</h3>
        <p class="confirm-text">Ești sigur că vrei să elimini această recenzie?</p>

        <div class="review-preview">
            <span class="review-label">RECENZIE PENTRU FILMUL</span>
            <h1 class="movie-name">@Model.Movie?.Title</h1>

            <div class="user-info">
                Scrisă de: <strong>@Model.UserName</strong>
                <span class="mx-2">•</span>
                <i class="bi bi-star-fill text-warning"></i> @Model.Rating/10
            </div>

            <div class="review-snippet">
                "@Model.Content"
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-center align-items-center gap-3">
                <a asp-action="Index" class="btn-cancel-simple">Anulează</a>
                <button type="submit" class="btn-delete-simple">
                    Șterge
                </button>
            </div>
        </form>

    </div>
</div>