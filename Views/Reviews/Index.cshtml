@model IEnumerable<MovieExpert_Proiect.Models.Review>

@{
    ViewData["Title"] = "Recenzii";
}

<style>
 
    :root {
        --color-primary: #146c86; 
        --color-dark: #2b4955; 
        --color-accent: #ecac98; 
    }

    
    .page-title {
        color: var(--color-dark);
        font-weight: 800;
        margin-bottom: 0.5rem;
        font-size: 3rem; 
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 1.3rem; 
        font-weight: 400;
        margin-bottom: 1.5rem;
    }

    .divider-custom {
        height: 5px;
        width: 80px; 
        background-color: var(--color-accent);
        border-radius: 10px;
        margin: 0 auto;
    }

    
    .btn-add-custom {
        background-color: var(--color-primary);
        color: white;
        padding: 10px 28px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(20, 108, 134, 0.2);
        transition: all 0.2s;
        border: none;
        display: inline-flex;
        align-items: center;
        font-size: 1rem;
    }

        .btn-add-custom:hover {
            background-color: var(--color-dark);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(20, 108, 134, 0.3);
        }

   
    .review-card {
        background: #fff;
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border-left: 5px solid var(--color-primary);
    }

        .review-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.08);
        }

    
    .review-header {
        background-color: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .movie-title {
        font-weight: 700;
        color: var(--color-dark);
        font-size: 1rem;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 75%;
    }

    .rating-badge {
        background-color: var(--color-accent);
        color: var(--color-dark);
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 800;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

  
    .review-body {
        padding: 20px;
        flex-grow: 1;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 12px;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        background-color: var(--color-dark);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .user-name {
        font-weight: 700;
        color: #333;
        font-size: 0.95rem;
    }

    .comment-text {
        color: #555;
        font-style: italic;
        line-height: 1.5;
        font-size: 0.95rem;
        background: #fafafa;
        padding: 10px;
        border-radius: 8px;
        border-left: 3px solid #eee;
    }

    
    .review-footer {
        padding: 15px 20px;
        border-top: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fff;
    }

    .review-date {
        font-size: 0.8rem;
        color: #999;
        font-weight: 600;
    }

    .action-links a {
        color: #adb5bd;
        margin-left: 12px;
        transition: 0.2s;
        font-size: 1.2rem;
    }

        .action-links a:hover {
            color: var(--color-primary);
        }

        .action-links a.delete-btn:hover {
            color: #dc3545;
        }

</style>

<div class="container mt-5 mb-5">

    <div class="text-center mb-5">
        <h1 class="page-title">Recenzii Filme</h1>
        <p class="page-subtitle">Ce părere au utilizatorii despre filme</p>
        <div class="divider-custom"></div>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn-add-custom">
            <i class="bi bi-pencil-square me-2"></i> Adaugă Recenzie Nouă
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="review-card">

                    <div class="review-header">
                        <h5 class="movie-title" title="@item.Movie?.Title">
                            <i class="bi bi-film me-2"></i>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </h5>
                        <div class="rating-badge">
                            <i class="bi bi-star-fill"></i> @item.Rating
                        </div>
                    </div>

                    <div class="review-body">
                        <div class="user-info">
                            <div class="user-avatar">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <span class="user-name">@item.UserName</span>
                        </div>

                        <div class="comment-text">
                            "@item.Content"
                        </div>
                    </div>

                    <div class="review-footer">
                        <span class="review-date">
                            <i class="bi bi-calendar-event me-1"></i>
                            @item.ReviewDate.ToString("dd MMM yyyy")
                        </span>

                        <div class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editează">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Detalii">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="delete-btn" title="Șterge">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>