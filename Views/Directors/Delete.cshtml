@model MovieExpert_Proiect.Models.Director

@{
    ViewData["Title"] = "Șterge Regizor";
}

<style>
   
    :root {
        --color-primary: #146c86; 
        --color-dark: #2b4955; 
    }

   
    .delete-card {
        background: #fff;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        max-width: 500px;
        margin: 4rem auto; 
        padding: 40px;
        text-align: center;
    }

   
    .page-title {
        color: var(--color-dark);
        font-weight: 700;
        margin-bottom: 10px;
    }

    .confirm-text {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 30px;
    }

 
    .director-preview {
        background-color: #f8f9fa; 
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
        border: 1px solid #e9ecef;
        position: relative;
    }

    .director-name {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--color-dark);
        margin: 0;
    }

    .director-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #adb5bd;
        letter-spacing: 1px;
        font-weight: 700;
        display: block;
        margin-bottom: 5px;
    }

  
    .btn-delete-simple {
        background-color: #dc3545; 
        color: white;
        padding: 10px 35px;
        border-radius: 30px;
        font-weight: 600;
        border: none;
        transition: background 0.2s;
    }

        .btn-delete-simple:hover {
            background-color: #bb2d3b;
        }

    .btn-cancel-simple {
        background-color: transparent;
        color: #6c757d;
        padding: 10px 25px;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
        display: inline-block;
    }

        .btn-cancel-simple:hover {
            color: var(--color-dark);
            text-decoration: underline;
        }
</style>

<div class="container">

    <div class="delete-card">

        <h3 class="page-title">Șterge Regizor</h3>
        <p class="confirm-text">Ești sigur că vrei să elimini acest regizor din listă?</p>

        <div class="director-preview">
            <span class="director-label">REGIZOR SELECTAT</span>
            <h1 class="director-name">@Model.Name</h1>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-center align-items-center gap-3">
                <a asp-action="Index" class="btn-cancel-simple">Anulează</a>
                <button type="submit" class="btn-delete-simple">
                    Șterge
                </button>
            </div>
        </form>

    </div>
</div>