<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieExpert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieExpert_Proiect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.08); }
        .nav-link { font-weight: 500; transition: color 0.2s; }
        .dropdown-item i { width: 1.5rem; color: #6c757d; }
        .ai-recommendation-btn {
            background-color: #f0f7ff;
            color: #007bff !important;
            border-radius: 50px;
            padding: 8px 20px !important;
            margin-left: 10px;
            border: 1px solid #cce5ff;
        }
        .ai-recommendation-btn:hover { background-color: #e1efff; }
        footer { background-color: #f8f9fa; margin-top: 50px; padding: 20px 0; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film"></i> MovieExpert
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarMovies" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Filme
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="navbarMovies">
                                <li><a class="dropdown-item py-2" asp-controller="Movies" asp-action="Index"><i class="bi bi-grid-3x3-gap-fill"></i> Toate Filmele</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item py-2" asp-controller="Genres" asp-action="Index"><i class="bi bi-tags-fill"></i> Genuri</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Directors" asp-action="Index"><i class="bi bi-megaphone-fill"></i> Regizori</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-bounding-box"></i> Actori Principali</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="Index">Recenzii</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link ai-recommendation-btn fw-bold" asp-area="" asp-controller="MovieAI" asp-action="Index">
                                <i class="bi bi-robot"></i> Recomandare AI
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-muted small" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - <span class="fw-bold text-dark">MovieExpert</span> - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>