<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieExpert</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
       
        :root {
            --color-primary: #146c86; 
            --color-secondary: #558a9f; 
            --color-light: #b1c9cd; 
            --color-dark: #2b4955;
            --color-accent: #ecac98;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: transparent;
            color: var(--color-dark);
            min-height: 100vh;
            position: relative;
        }

        #background-layer {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: url('/images/238.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.80; 
            pointer-events: none;
        }

       
        .main-card, .review-card, .ai-card, .actor-card, .delete-card, .create-card, .details-card, .result-card, .custom-ai-card {
            background-color: rgba(255, 255, 255, 0.92);
            backdrop-filter: blur(5px);
        }

        a {
            text-decoration: none;
        }

        .text-primary {
            color: var(--color-primary) !important;
        }

        
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 80px;
            background-color: var(--color-dark) !important; 
            box-shadow: 4px 0 15px rgba(0,0,0,0.1);
            transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1000;
            overflow-x: hidden;
            white-space: nowrap;
        }

            .sidebar:hover {
                width: 260px;
            }

            .sidebar:not(:hover) .collapse {
                display: none !important;
            }

            .sidebar .nav-link {
                color: var(--color-light) !important;
                font-weight: 500;
                padding: 12px 24px;
                border-radius: 0 25px 25px 0;
                margin-bottom: 5px;
                display: flex;
                align-items: center;
                height: 50px;
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.1) !important;
                    color: #ffffff !important;
                }

                .sidebar .nav-link i {
                    font-size: 1.4rem;
                    min-width: 40px;
                    text-align: center;
                    color: var(--color-accent);
                }

                .sidebar .nav-link.active-link {
                    background-color: var(--color-primary) !important;
                    color: #ffffff !important;
                    font-weight: 600;
                    border-left: 4px solid var(--color-accent);
                }

                    .sidebar .nav-link.active-link i {
                        color: #ffffff !important;
                    }

            .sidebar .link-text, .sidebar .bi-chevron-down, .sidebar .logo-text-full {
                opacity: 0;
                transition: opacity 0.2s;
                pointer-events: none;
            }

            .sidebar:hover .link-text, .sidebar:hover .bi-chevron-down, .sidebar:hover .logo-text-full {
                opacity: 1;
                pointer-events: auto;
                transition-delay: 0.1s;
            }

        ul.nav.flex-column {
            list-style: none !important;
            padding-left: 0;
        }

        .sub-link {
            padding-left: 70px !important;
            color: var(--color-light) !important;
            font-size: 0.9rem;
        }

            .sub-link:hover {
                color: #fff !important;
            }

        .logo-area {
            height: 80px;
            display: flex;
            align-items: center;
            padding-left: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            background-color: #233d47;
        }

        .logo-icon {
            color: var(--color-accent) !important;
        }

        
        .main-content {
            margin-left: 80px;
            padding: 30px;
            width: calc(100% - 80px);
            position: relative;
            z-index: 1;
        }

        .ai-btn-gradient {
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            color: white !important;
        }

            .ai-btn-gradient i {
                color: white !important;
            }
    </style>
</head>
<body>

    <div id="background-layer"></div>

    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

        string GetActiveClass(string controller, string action = null)
        {
            if (currentController == controller && (action == null || currentAction == action))
            {
                return "active-link";
            }
            return "";
        }

        bool IsMoviesGroupActive = currentController == "Movies" ||
        currentController == "Genres" ||
        currentController == "Directors" ||
        currentController == "Actors";
    }

    <nav class="sidebar d-flex flex-column">
        <div class="logo-area">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                <i class="bi bi-film logo-icon" style="font-size: 1.8rem; min-width: 40px; text-align: center;"></i>
                <span class="logo-text-full ms-2 fw-bold text-white">MovieExpert</span>
            </a>
        </div>

        <ul class="nav flex-column mb-auto mt-2">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link @GetActiveClass("Home", "Index")">
                    <i class="bi bi-speedometer2"></i> <span class="link-text ms-2">Dashboard</span>
                </a>
            </li>

            <li class="nav-item">
                <a href="#submenuMovies" data-bs-toggle="collapse" class="nav-link @(IsMoviesGroupActive ? "" : "collapsed")">
                    <i class="bi bi-grid-fill"></i> <span class="link-text ms-2">Filme</span>
                    <i class="bi bi-chevron-down ms-auto small"></i>
                </a>
                <ul class="collapse nav flex-column @(IsMoviesGroupActive ? "show" : "")" id="submenuMovies">
                    <li class="nav-item"><a asp-controller="Movies" asp-action="Index" class="nav-link sub-link @GetActiveClass("Movies")">Toate Filmele</a></li>
                    <li class="nav-item"><a asp-controller="Genres" asp-action="Index" class="nav-link sub-link @GetActiveClass("Genres")">Genuri</a></li>
                    <li class="nav-item"><a asp-controller="Directors" asp-action="Index" class="nav-link sub-link @GetActiveClass("Directors")">Regizori</a></li>
                    <li class="nav-item"><a asp-controller="Actors" asp-action="Index" class="nav-link sub-link @GetActiveClass("Actors")">Actori</a></li>
                </ul>
            </li>

            <li class="nav-item">
                <a asp-controller="Reviews" asp-action="Index" class="nav-link @GetActiveClass("Reviews")">
                    <i class="bi bi-chat-quote-fill"></i> <span class="link-text ms-2">Recenzii</span>
                </a>
            </li>

            <li class="nav-item mt-3">
                <a asp-controller="MovieAI" asp-action="Index" class="nav-link ai-btn-gradient mx-2 rounded @GetActiveClass("MovieAI")" style="padding-left: 12px; justify-content: start;">
                    <i class="bi bi-robot"></i> <span class="link-text ms-2">Recomandare AI</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="main-content">
        @RenderBody()
        <footer class="mt-5 text-muted text-center small">
            &copy; 2026 - MovieExpert - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>