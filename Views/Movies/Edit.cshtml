@model MovieExpert_Proiect.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Movie</h1>

<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="ReleaseYear" class="control-label"></label>
                    <input asp-for="ReleaseYear" class="form-control" />
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="RuntimeMinutes" class="control-label"></label>
                    <input asp-for="RuntimeMinutes" class="form-control" />
                    <span asp-validation-for="RuntimeMinutes" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IMDBRating" class="control-label"></label>
                <input asp-for="IMDBRating" class="form-control" />
                <span asp-validation-for="IMDBRating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PosterUrl" class="control-label"></label>
                <input asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Overview" class="control-label"></label>
                <textarea asp-for="Overview" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Overview" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="GenreId" class="control-label">Genre</label>
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="DirectorId" class="control-label">Director</label>
                    <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
                    <span asp-validation-for="DirectorId" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="ActorId" class="control-label">Actor</label>
                    <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId"></select>
                    <span asp-validation-for="ActorId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>