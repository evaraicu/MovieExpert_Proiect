@model MovieExpert_Proiect.Models.Movie

@{
    ViewData["Title"] = "Șterge Film";
}

<style>

    .delete-card-simple {
        background: #fff;
        border-radius: 12px;
        border: 1px solid #f0f0f0; 
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        max-width: 550px;
        margin: 4rem auto; 
        padding: 40px;
        text-align: center;
    }

    
    .page-title {
        color: var(--color-dark);
        font-weight: 700;
        margin-bottom: 10px;
    }

    .confirm-text {
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    
    .movie-preview {
        background-color: #f8f9fa; 
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        border: 1px solid #e9ecef;
    }

    .preview-title {
        font-size: 1.4rem;
        font-weight: 800;
        color: var(--color-dark);
        margin-bottom: 5px;
    }

    .preview-meta {
        font-size: 0.9rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

  
    .btn-delete-simple {
        background-color: #dc3545;
        color: white;
        padding: 10px 35px;
        border-radius: 30px;
        font-weight: 600;
        border: none;
        transition: background 0.2s;
    }

        .btn-delete-simple:hover {
            background-color: #bb2d3b;
        }

    .btn-cancel-simple {
        background-color: transparent;
        color: #6c757d;
        padding: 10px 25px;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .btn-cancel-simple:hover {
            color: var(--color-dark);
            text-decoration: underline;
        }
</style>

<div class="container">

    <div class="delete-card-simple">

        <h3 class="page-title">Ștergere Film</h3>
        <p class="confirm-text">Ești sigur că vrei să elimini acest titlu din listă?</p>

        <div class="movie-preview">
            <h1 class="preview-title">@Model.Title</h1>
            <div class="preview-meta">
                <span>@Model.ReleaseYear</span>
                @if (Model.Genre != null)
                {
                    <span> • @Model.Genre.Name</span>
                }
            </div>

            @if (Model.Director != null)
            {
                <div class="mt-2 small text-muted">
                    Regia: @Model.Director.Name
                </div>
            }
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-center align-items-center gap-3">
                <a asp-action="Index" class="btn-cancel-simple">Anulează</a>
                <button type="submit" class="btn-delete-simple">
                    Șterge
                </button>
            </div>
        </form>

    </div>
</div>