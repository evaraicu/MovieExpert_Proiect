@model MovieExpert_Proiect.Models.Movie

@{
    ViewData["Title"] = "Detalii Film - " + Model.Title;
}

<style>
   
    :root {
        --color-primary: #146c86; 
        --color-dark: #2b4955; 
        --color-accent: #ecac98;
    }


    .main-card {
        background: #fff;
        border-radius: 12px;
        border: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 2rem;
    }

   
    .details-container {
        padding: 40px;
    }

    .movie-title {
        font-weight: 800;
        color: var(--color-dark);
        margin-bottom: 0.5rem;
        font-size: 2.5rem;
    }

    .meta-info {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .badge-genre {
        background-color: var(--color-primary);
        color: white;
        padding: 5px 15px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 1rem;
    }

   
    .rating-display {
        display: inline-flex;
        align-items: center;
        background-color: #fff9f0;
        border: 1px solid var(--color-accent);
        padding: 15px 30px;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .rating-number {
        font-size: 2rem;
        font-weight: 800;
        color: var(--color-dark);
        margin-right: 15px;
        line-height: 1;
    }

   
    .section-title {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        color: #adb5bd;
        font-weight: 700;
        margin-bottom: 8px;
        margin-top: 25px;
    }

    .info-value {
        font-size: 1.2rem;
        font-weight: 500;
        color: var(--color-dark);
    }

    
    .btn-turcoaz {
        background-color: var(--color-primary);
        color: white;
        padding: 10px 24px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        transition: all 0.2s;
        box-shadow: 0 4px 10px rgba(20, 108, 134, 0.2);
        display: inline-flex;
        align-items: center;
    }

        .btn-turcoaz:hover {
            background-color: var(--color-dark);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(20, 108, 134, 0.3);
        }

   
    .review-item {
        background: #fff;
        border: 1px solid #f0f0f0;
        border-left: 4px solid var(--color-primary); 
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        transition: transform 0.2s;
    }

        .review-item:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

    .user-icon {
        width: 45px;
        height: 45px;
        background-color: var(--color-dark);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }
</style>

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i> Înapoi la listă
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn text-white shadow-sm rounded-pill px-4" style="background-color: var(--color-primary);">
            <i class="bi bi-pencil-square me-2"></i> Editează Filmul
        </a>
    </div>

    <div class="main-card">
        <div class="details-container">

            <div class="border-bottom pb-4 mb-4">
                <h1 class="movie-title">@Model.Title</h1>
                <div class="meta-info">
                    <span><i class="bi bi-calendar3 me-2 text-primary"></i> @Model.ReleaseYear</span>
                    <span><i class="bi bi-clock me-2 text-primary"></i> @Model.RuntimeMinutes min</span>
                    <span class="badge-genre">@(Model.Genre?.Name ?? "N/A")</span>
                </div>

                <div class="rating-display">
                    <i class="bi bi-star-fill text-warning fs-2 me-3"></i>
                    <div>
                        <div class="d-flex align-items-baseline">
                            <span class="rating-number">@Model.IMDBRating</span>
                            <span class="text-muted fs-5">/ 10</span>
                        </div>
                        <div class="text-muted small text-uppercase fw-bold" style="letter-spacing: 1px;">IMDb Rating</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 pe-lg-5">
                    <div class="section-title mt-0">Sinopsis</div>
                    <p class="lead fs-5" style="line-height: 1.7; color: #495057;">
                        @(!string.IsNullOrEmpty(Model.Overview) ? Model.Overview : "Nu există o descriere pentru acest film.")
                    </p>
                </div>

                <div class="col-lg-4 mt-4 mt-lg-0 border-start ps-lg-4">
                    <div class="mb-4">
                        <div class="section-title mt-0">Regizor</div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-megaphone-fill text-muted me-2"></i>
                            <span class="info-value">@(Model.Director?.Name ?? "Necunoscut")</span>
                        </div>
                    </div>

                    <div>
                        <div class="section-title">Actor Principal</div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-badge-fill text-muted me-2"></i>
                            <span class="info-value">@(Model.Actor?.Name ?? "Necunoscut")</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3 p-4 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <h3 class="fw-bold m-0" style="color: var(--color-dark);">
                Recenzii
                <span class="badge bg-light text-dark border fs-6 ms-2 align-middle">
                    @((Model.Reviews != null) ? Model.Reviews.Count : 0)
                </span>
            </h3>

            <a asp-controller="Reviews" asp-action="Create" asp-route-movieId="@Model.Id" class="btn-turcoaz">
                <i class="bi bi-plus-lg me-2"></i> Adaugă o recenzie
            </a>
        </div>

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            <div class="reviews-list">
                @foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
                {
                    <div class="review-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex">
                                <div class="user-icon me-3">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0 text-dark">@review.UserName</h6>
                                    <small class="text-muted">
                                        @review.ReviewDate.ToString("dd MMMM yyyy")
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-warning text-dark rounded-pill fs-6 px-3">
                                    ⭐ @review.Rating
                                </span>
                            </div>
                        </div>
                        <div class="mt-3 ps-5 ms-2">
                            <p class="mb-0 text-dark" style="font-style: italic; font-size: 1.05rem;">"@review.Content"</p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-chat-square-text display-4 text-muted opacity-25"></i>
                <h5 class="mt-3 text-muted">Nicio recenzie momentan</h5>
                <p class="text-muted small">Fii primul care lasă o recenzie pentru acest film!</p>
            </div>
        }
    </div>

</div>