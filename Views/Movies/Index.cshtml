@model IEnumerable<MovieExpert_Proiect.Models.Movie>

@{
    ViewData["Title"] = "Filme";
}

<div class="container mt-4" style="max-width: 850px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark" style="font-size: 1.4rem;">Listă Filme</h2>
        <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
            <i class="bi bi-plus"></i> Adaugă Film
        </a>
    </div>

    <div class="mb-4">
        <form asp-controller="Movies" asp-action="Index" method="get">
            <div class="input-group input-group-sm shadow-sm rounded-pill overflow-hidden bg-white border">
                <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control border-0 shadow-none" placeholder="Caută un film..." />
                <button type="submit" class="btn btn-white border-0 text-primary fw-bold px-3">Caută</button>
            </div>
        </form>
    </div>

    <div class="movie-list-container">
        @foreach (var item in Model)
        {
            <div class="movie-item-row mb-2 shadow-sm border rounded-3 bg-white transition p-2">
                <div class="d-flex align-items-center">

                    <div class="poster-mini-wrap">
                        @if (!string.IsNullOrEmpty(item.PosterUrl))
                        {
                            <img src="@item.PosterUrl" class="poster-mini" alt="@item.Title" />
                        }
                        else
                        {
                            <div class="poster-placeholder"><i class="bi bi-film"></i></div>
                        }
                    </div>

                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 fw-bold text-dark">@item.Title</h6>
                        <div class="text-muted" style="font-size: 0.75rem;">
                            <span class="badge bg-light text-dark border p-1"><i class="bi bi-star-fill text-warning"></i> @item.IMDBRating</span>
                            <span class="ms-2">@item.ReleaseYear • @item.Genre?.Name</span>
                        </div>
                    </div>

                    <div class="d-flex gap-1 pe-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle" title="Detalii"><i class="bi bi-eye text-primary"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle" title="Editează"><i class="bi bi-pencil text-warning"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle" title="Șterge"><i class="bi bi-trash text-danger"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f9fafb;
    }

    .movie-item-row {
        transition: transform 0.2s, border-color 0.2s;
    }

        .movie-item-row:hover {
            transform: translateX(5px);
            border-color: #007bff;
        }

    .poster-mini-wrap {
        width: 45px;
        height: 65px;
        flex-shrink: 0;
        border-radius: 4px;
        overflow: hidden;
        background-color: #fff; 
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
    }

    .poster-mini {
        width: 100%;
        height: 100%;
        object-fit: contain; 
    }

    .poster-placeholder {
        color: #ccc;
        font-size: 1.2rem;
    }

    .btn-light {
        width: 30px;
        height: 30px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
    }

    .transition {
        transition: all 0.2s ease-in-out;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.04) !important;
    }
</style>